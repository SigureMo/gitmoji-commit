{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "gitmoji-commit",
  "title": "Gitmoji Commit",
  "description": "Gitmoji Commit is an emoji guide for your commit messages",
  "icon": "icon.png",
  "owner": "bone-corp",
  "author": "zrr1999",
  "contributors": [],
  "license": "MIT",
  "commands": [
    {
      "name": "gitmoji",
      "title": "Gitmoji",
      "description": "Search your Gitmoji and copy or paste it",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "emojiFormat",
      "type": "dropdown",
      "required": false,
      "title": "Emoji format",
      "data": [
        {
          "title": "Emoji ✨",
          "value": "emoji"
        },
        {
          "title": "Code :sparkles:",
          "value": "code"
        }
      ],
      "description": "Copy the emoji or copy the code",
      "default": "emoji"
    },
    {
      "name": "copyFormat",
      "type": "dropdown",
      "required": false,
      "title": "Copy Format",
      "data": [
        {
          "title": "Emoji `✨`",
          "value": "emoji"
        },
        {
          "title": "Emoji and Type `✨ feat`",
          "value": "emoji-type"
        }
      ],
      "description": "Copy format",
      "default": "emoji"
    },
    {
      "name": "terminator",
      "type": "textfield",
      "required": false,
      "title": "Terminator",
      "description": "The terminator for the emoji",
      "default": ": "
    },
    {
      "name": "action",
      "type": "dropdown",
      "required": false,
      "title": "Primary Action",
      "data": [
        {
          "title": "Copy",
          "value": "copy"
        },
        {
          "title": "Paste",
          "value": "paste"
        }
      ],
      "description": "Primary action of the extension",
      "default": "paste"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.42.0",
    "@raycast/utils": "^1.5.2",
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^18.8.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}